{
  "accountAccess": {
    "type": "screen",
    "header": "",
    "illustrationAlt": "Hand holding phone with Venmo app surrounded by icons of money, pizza, and emojis.",
    "buttons": {
      "primary": "buttons.createAccount",
      "secondary": "buttons.logIn"
    }
  },

  "accountType": {
    "type": "halfSheet",
    "header": "How will you use Venmo?",
    "options": {
      "personal": { "label": "Personal" },
      "teen": { "label": "Teen" },
      "business": { "label": "Business" }
    },
    "legal": {
      "required": "strings.legal.ageRequirement",
      "links": {
        "tos": { "label": "User Agreement", "url": "https://example.com/terms" }
      },
      "meta": { "legalRequired": true, "version": "2025-10-01" }
    },
    "buttons": { "primary": "buttons.getStarted" }
  },

  "phoneVerification": {
  "type": "halfSheet",
  "header": "Whatâ€™s your number?",
  "helperText": "strings.messages.verificationIntro",
  "fields": {
    "phone": {
      "label": "strings.labels.phoneNumber",
      "placeholder": "strings.placeholders.phoneNumber"
    }
  },
  "legal": {
    "required": "strings.legal.smsConsent",
    "meta": { "legalRequired": true }
  },
  "buttons": { "primary": "buttons.next" }
},

  "codeVerification": {
    "type": "halfSheet",
    "header": "Enter the code",
    "helperText": "strings.messages.verificationSent",
    "fields": {
      "otp": {
        "label": "strings.labels.verificationCode",
        "digits": 6,
        "placeholder": "strings.placeholders.verificationCode"
      }
    },
    "buttons": { "primary": "buttons.confirm" },
    "tertiary": { "resend": "buttons.resendCode" }
  },

  "userName": {
    "type": "form",
    "header": "Tell us about you",
    "helperText": "This helps personalize your Venmo experience.",
    "fields": {
      "firstName": {
        "label": "strings.labels.firstName",
        "placeholder": "strings.placeholders.firstName"
      },
      "lastName": {
        "label": "strings.labels.lastName",
        "placeholder": "strings.placeholders.lastName"
      },
      "birthDate": {
        "label": "strings.labels.birthDate",
        "placeholder": "strings.placeholders.birthDate"
      },
      "address": {
        "label": "strings.labels.address",
        "placeholder": "strings.placeholders.address"
      }
    },
    "legal": {
      "required": "strings.legal.identityVerification",
      "meta": { "legalRequired": true }
    },
    "buttons": { "primary": "buttons.next" }
  },

  "legalTerms": {
    "type": "scrollSheet",
    "header": "Legal terms",
    "legal": {
      "required": "strings.legal.acceptance",
      "links": {
        "userAgreement": {
          "label": "Venmo User Agreement",
          "url": "https://venmo.com/legal/us-user-agreement"
        },
        "privacyPolicy": {
          "label": "Privacy Policy",
          "url": "https://venmo.com/legal/us-privacy-policy"
        }
      },
      "meta": { "legalRequired": true }
    },
    "checkboxes": {
      "agreeToTerms": {
        "label": "I agree to the User Agreement and Privacy Policy"
      }
    },
    "buttons": { "primary": "buttons.agreeAndContinue" }
  }
}
